.indicator {
  margin: 0 auto;
  position: relative;
  width: 220px;
}

.indicator__svg-progress {
  fill: none;
  stroke-width: 8px;
  stroke-linecap: round;
  stroke-dasharray: 659.9; /* C = 2 * PI * R. (R = 56) */
  transform: rotate(-90deg);
  transform-origin: 50% 50%;
}

.indicator__text {
  padding-top: 4px;
  position: relative;
  z-index: 2;
  width: 100%;
  font-size: 0;
  text-align: center;
  white-space: nowrap;
}

.indicator__text span{
  padding:0;
}

.indicator__score span{
  font-size: 22px;
}



.indicator--1 .indicator__svg-progress,
.animation-supported .scrolled.indicator--1 .indicator__svg-progress {
  stroke: rgb(162, 56, 255);
  stroke-dashoffset: 0; /* (100 - percents)/100) * C */
}

.animated.indicator--1 .indicator__svg-progress {
  animation: progress-1 2s ease-in-out forwards;
  animation-delay: 2s;
}

.animation-supported .indicator--1 .indicator__svg-progress {
	stroke-dashoffset: 659.9;
}

@keyframes progress-1 {
  from {
    stroke-dashoffset: 659.9;
  }
  to {
    stroke-dashoffset: 0;
  }
}

.indicator--2 .indicator__svg-progress,
.animation-supported .scrolled.indicator--2 .indicator__svg-progress {
  stroke: rgb(162, 56, 255);
