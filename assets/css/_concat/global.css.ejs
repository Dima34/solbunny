.roadmap__item{
  padding: <%= config.gaps.buffer +"px" %>;
  background-color: #232323;
  box-shadow: 13px 12px 40px rgb(0 0 0 / 60%);
  border-radius:15px;
}


.roadmap__item-container  .roadmap__item-wrapper{
  padding-right: 30px;
}

.roadmap__item-container:nth-child(2n) .roadmap__item-wrapper{
  padding-left: 30px;
  padding-right: 0;
  border-left: 1px solid #582ca9;
  border-right: 0;
}

.roadmap__item-container:nth-child(2n) .roadmap__item-wrapper::after{
  right: auto;
  left: 0;
}

.roadmap__item-container:nth-child(2n) .roadmap__item-wrapper::before{
  right: auto;
  left: -9px;
}

.roadmap__item-wrapper{
  border-right: 1px solid #582ca9;
  position: relative;
}

.roadmap__item-wrapper::after{
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  width: 30px;
  height: 2px;
  transform: translateY(-50%);
  border-bottom: 2px solid #582ca9;
}

.roadmap__item-wrapper::before{
  content: "";
  position: absolute;
  right: -9px;
  border-radius: 50%;
  top: 50%;
  width: 16px;
  height: 16px;
  transform: translateY(-50%);
  background: #582ca9;
}

.roadmap__spacer{
  border-left: 1px solid #582ca9;
  border-right: 0;
  padding: 1px;
}

.roadmap__item-container:nth-child(2n) .roadmap__spacer{
  border-right: 1px solid #582ca9;
  border-left:0;
}


.roadmap__buy{
  display: inline;
  min-width: 210px;
}

